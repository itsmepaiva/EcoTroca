generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuario {
  id_usuario Int @id @default(autoincrement())
  nome String
  email String @unique
  senha String
  criadoEm DateTime @default(now())
  atualizadoEm DateTime @updatedAt
  itens item[]
  trocasEnviadas troca[] @relation("TrocasEnviadas")
  trocasRecebidas troca[] @relation("TrocasRecebidas")
}

model item {
  id_item         Int         @id @default(autoincrement())
  titulo     String
  descricao  String
  cidade     String
  bairro     String
  endereco   String
  imagemUrl  String
  status     statusItem  @default(DISPONIVEL)
  criadoEm   DateTime    @default(now())
  atualizadoEm DateTime  @updatedAt
  donoId     Int
  categoriaId Int
  dono       usuario     @relation(fields: [donoId], references: [id_usuario])
  categoria  categoria   @relation(fields: [categoriaId], references: [id_categoria])
  trocaOferecida troca[] @relation("ItemOferecido")
  trocaDesejada  troca[] @relation("ItemDesejado")
}

model categoria {
  id_categoria      Int    @id @default(autoincrement())
  nome    String @unique
  itens   item[]
}

model troca {
  id_troca           Int         @id @default(autoincrement())
  itemOferecidoId Int
  itemDesejadoId  Int
  status       statusTroca @default(PENDENTE)
  criadoEm     DateTime    @default(now())
  atualizadoEm DateTime    @updatedAt
  ofertanteId  Int
  receptorId   Int

  itemOferecido item    @relation("ItemOferecido", fields: [itemOferecidoId], references: [id_item])
  itemDesejado  item    @relation("ItemDesejado", fields: [itemDesejadoId], references: [id_item])
  ofertante     usuario @relation("TrocasEnviadas", fields: [ofertanteId], references: [id_usuario])
  receptor      usuario @relation("TrocasRecebidas", fields: [receptorId], references:Â [id_usuario])
}

enum statusTroca {
  PENDENTE
  ACEITA
  RECUSADA
  CONCLUIDA
  CANCELADA
}

enum statusItem {
  DISPONIVEL
  NEGOCIANDO
  INDISPONIVEL
}